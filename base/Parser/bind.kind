Parser.bind<A: Type, B: Type>(parse: Parser(A), next: A -> Parser(B)): Parser(B)
  (err, idx, code)
    reply = parse(err, idx, code)
    case reply {
      error: case err {
        none:
          Parser.Reply.error<B>(reply.err),
        some:
          val = Parser.ErrorAt.combine(err.value, reply.err)
          Parser.Reply.error<B>(val)
      }
      value:
        l = Parser.ErrorAt.maybe_combine(err, reply.err)
        next(reply.val, l, reply.idx, reply.code),
    }
