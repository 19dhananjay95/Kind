// Checks if a coord is inside the map boundaries
App.Kaelin.Coord.fit(
  coord: App.Kaelin.Coord,
  map_size: U32
): Bool
  coord = App.Kaelin.Coord.Convert.axial_to_cubic(coord)
  open coord
  
  x = I32.abs(coord.x)
  y = I32.abs(coord.y)
  z = I32.abs(coord.z)
  greater = I32.max(x, I32.max(y, z))
  greater = I32.to_u32(greater)
  U32.lte(greater, map_size)
