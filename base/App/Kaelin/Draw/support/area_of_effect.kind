App.Kaelin.Draw.support.area_of_effect(
  mouse_coord: App.Kaelin.Coord,
  coord_nat: Nat,
  cast_info: Maybe(App.Kaelin.CastInfo.local),
): Maybe(App.Kaelin.Indicator)

  Maybe { 
    get cast = cast_info
    let cast_range = cast@range
    let cast_area = cast@area
    let mouse_pos = App.Kaelin.Coord.Convert.axial_to_nat(mouse_coord)
    get result = 
    if NatSet.has(mouse_pos, cast_range) then
      NatMap.get!(coord_nat, cast_area)
    else
      none
    return result
  }
