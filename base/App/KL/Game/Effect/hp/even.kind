App.KL.Game.Effect.hp.even(
  value: I32
): App.KL.Game.Effect<I32>
  App.KL.Game.Effect {
    get target = App.KL.Game.Effect.coord.get_target
    let sum = target@i + target@j
    let is_even = I32.eql(I32.mod(sum, 2), 0)
    if is_even then 
      App.KL.Game.Effect.hp.change(value)
    else 
      App.KL.Game.Effect.hp.change(I32.neg(value))
  }
