// draw hero in some canvas coordinate (allows pass hexagons)
App.Kaelin.Draw.hero(
  cx: U32,
  cy: U32,
  z: U32,
  hero: App.Kaelin.Hero,
  img: VoxBox
): VoxBox

  open hero
  aux_y = App.Kaelin.Constants.hexagon_radius * 2 //U32
  cy = cy - aux_y //U32
  cx = cx - App.Kaelin.Constants.hexagon_radius //U32

  VoxBox.Draw.image(cx, cy, 0u, hero.assets@vbox, img)
