App.KL.Game.Hero.Lela.hero: App.KL.Game.Hero
  let name = "Lela"

  let draw = (player)
    App.KL.Game.Hero.Lela.Assets.vbox_idle

  let picture = (bool, time)
    App.KL.Game.Hero.Lela.Assets.base64_idle

  let max_hp = 25 :: I32

  let max_ap = 10 :: I32

  let skills = {
    "X": App.KL.Game.Skill.new("Walk", 500, 16, 2, App.KL.Game.Effect.common.walk(2))
    "Q": App.KL.Game.Skill.new("Restore", 400, 16, 2, App.KL.Game.Hero.Lela.hero.Skills.restore(4, 2))
    "W": App.KL.Game.Skill.new("Escort", 400, 16, 4, App.KL.Game.Effect.common.shield.single(4, "Lela Escort", 1, 2))
    "E": App.KL.Game.Skill.new("Detain", 600, 16, 4, App.KL.Game.Hero.Lela.hero.Skills.detain(2, 2))
  }

  let on_stepped = none

  App.KL.Game.Hero.new(name, draw, picture, max_hp, max_ap, skills, on_stepped)


App.KL.Game.Hero.Lela.hero.Skills.restore(range: I32, heal: I32): App.KL.Game.Effect<Unit>
  App.KL.Game.Effect { 
    get target  = App.KL.Game.Effect.coord.get_target
    get center  = App.KL.Game.Effect.coord.get_center
    App.KL.Game.Effect.indicators.list(App.KL.Game.Indicator.blue, [center])
    App.KL.Game.Effect.indicators.list(App.KL.Game.Indicator.green, [target])
    App.KL.Game.Effect.common.heal.single(range, heal)
  }

App.KL.Game.Hero.Lela.hero.Skills.detain(range: I32, dmg: I32): App.KL.Game.Effect<Unit>
  App.KL.Game.Effect { 
    get target  = App.KL.Game.Effect.coord.get_target
    get center  = App.KL.Game.Effect.coord.get_center
    App.KL.Game.Effect.indicators.list(App.KL.Game.Indicator.blue, [center])
    App.KL.Game.Effect.indicators.list(App.KL.Game.Indicator.red, [target])
    App.KL.Game.Effect.common.dmg.single(range, dmg)
  }
