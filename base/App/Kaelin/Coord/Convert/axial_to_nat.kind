// Converts an axial coordinate to a natural number, so it can be used as a key in a NatMap(App.Kaelin.Tile)
// The coordinate {+2, -3} is transformed to 10020997 
App.Kaelin.Coord.Convert.axial_to_nat(
  coord: App.Kaelin.Coord
): Nat

  open coord
  i = coord.i + 100 //  I32
  i = i * 1000
  i = I32.to_u32(i)
  j = coord.j + 100
  j = I32.to_u32(j)
  sum = i + j   //U32
  U32.to_nat(sum)
