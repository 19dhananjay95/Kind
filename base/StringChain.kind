StringChain.Node.init(port: Nat): IO<Unit>
  IO {
    get time = IO.get_time
    let peers = Map.from_list!(List.mapped!([
      StringChain.Peer.new(time, StringChain.Address.ipv4(127,0,0,1,42000))
      StringChain.Peer.new(time, StringChain.Address.ipv4(127,0,0,1,42001))
      StringChain.Peer.new(time, StringChain.Address.ipv4(127,0,0,1,42002))
      StringChain.Peer.new(time, StringChain.Address.ipv4(127,0,0,1,42003))
    ])!((peer) { StringChain.Address.show(peer@address), peer }))
    let node = StringChain.Node.new(port, peers, StringChain.Store.genesis)
    StringChain.Node.loop(node)
  }
  
