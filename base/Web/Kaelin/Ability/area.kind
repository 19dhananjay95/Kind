type Web.Kaelin.Ability.area{
  self
  single
  radial(range: Nat)
  line(range: Nat)
}

Web.Kaelin.Ability.area.to_list(area: Web.Kaelin.Ability.area, a: Web.Kaelin.Coord, b: Web.Kaelin.Coord): List<Web.Kaelin.Coord>
  case area {
    self: [a]
    single: [b]
    radial: Web.Kaelin.Coord.range(b, area.range)
  }default [a]

type Web.Kaelin.Ability.area.indicator{
  green
  red
  yellow
}