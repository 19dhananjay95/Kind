// Draws the coordinates of a tile
App.Kaelin.Draw.tile_coords(coord: App.Kaelin.Coord, map: App.Kaelin.Map, img: VoxBox): VoxBox
  open coord
  let {cx,cy} = App.Kaelin.Coord.to_screen_xy(coord)
  let cx = U32.add(U32.sub(cx, App.Kaelin.Constants.hexagon_radius), 3u)
  let str = String.concat(I32.show(coord.i), I32.show(coord.j))
  VoxBox.Draw.text(str, PixelFont.small_black, Pos32.new(cx,cy,0u), img)
