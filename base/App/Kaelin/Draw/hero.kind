// draw hero in some canvas coordinate (allows pass hexagons)
App.Kaelin.Draw.hero(
  cx: U32,
  cy: U32,
  z: U32,
  hero: App.Kaelin.Hero,
  img: VoxBox
): VoxBox
  open hero
  let aux_y = U32.mul(App.Kaelin.Constants.hexagon_radius, 2u)
  let cy = U32.sub(cy, aux_y)
  let cx = U32.sub(cx, App.Kaelin.Constants.hexagon_radius)

  VoxBox.Draw.image(cx, cy, 0u, hero.img, img)
