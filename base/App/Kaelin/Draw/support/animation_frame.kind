// draw hero in some canvas coordinate (allows pass hexagons)
App.Kaelin.Draw.support.animation_frame(
  pos : App.Kaelin.Coord,
  z: U32,
  effect: VoxBox,
  img: VoxBox
): VoxBox

  {cx, cy} = App.Kaelin.Draw.support.centralize(pos)
  VoxBox.Draw.image(cx, cy-U32.div(App.Kaelin.Constants.hexagon_radius, 2), 0u, effect, img)
