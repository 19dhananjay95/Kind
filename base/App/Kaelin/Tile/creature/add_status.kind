App.Kaelin.Tile.creature.add_status(
  duration: I32
  effect: App.Kaelin.Status.Effect
  creature: App.Kaelin.Creature
): App.Kaelin.Creature

  open creature
  new_status = App.Kaelin.Status.new(duration, effect)
  new_status = List.cons!(new_status, creature.status)
  creature@status <- new_status
