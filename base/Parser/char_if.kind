Parser.char_if(fun: Char -> Bool): Parser(Char)
  (long, idx, code) case code {
    nil: Parser.Reply.error_long!(idx, code, "No parse."),
    cons:
      if fun(code.head) then
        Parser.Reply.value!(long, Nat.succ(idx), code.tail, code.head)
      else
        Parser.Reply.error_long!(idx, code, "No parse."),
  }
