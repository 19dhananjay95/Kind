App.KL.Game.Creature.Status.silence.add(
  creature: App.KL.Game.Creature
  caster_id: String
  duration: I32
): App.KL.Game.Creature
  
  let silence_added = App.KL.Game.Creature.Status.silence.add.aux(caster_id, duration, creature@status)
  creature@status <- silence_added

App.KL.Game.Creature.Status.silence.add.aux(
  caster_id: String
  duration: I32
  status: List<App.KL.Game.Creature.Status>
): List<App.KL.Game.Creature.Status>

  let new_silence = App.KL.Game.Creature.Status.silence(caster_id, duration)
  case status { 
    nil:
      new_silence & status
    cons:
      case status.head { 
        silence: 
          status
      }default status.head & App.KL.Game.Creature.Status.silence.add.aux(caster_id, duration, status.tail)
  }
