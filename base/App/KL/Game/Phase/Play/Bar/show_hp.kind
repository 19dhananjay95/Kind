App.KL.Game.Phase.Play.Bar.show_hp(
  cx: U32,
  cy: U32, 
  creature: App.KL.Game.Creature,
  img: VoxBox
): VoxBox

  open creature
  let hero = creature.hero
  open hero
  let shield = App.KL.Game.Board.Creature.total_shield(creature)

  let bar = App.KL.Game.Phase.Play.Bar.Progress.new(I32.to_u32(hero.max_hp*10), I32.to_u32((hero.max_hp*10) - (creature.hp*10)), I32.to_u32(shield*10), Col32.new(31, 203, 1, 255), Col32.new(202, 202, 201, 255), Col32.new(0, 0, 0, 255))  
  App.KL.Game.Phase.Play.Bar.draw(cx, cy, 2, 4, 38, bar, Col32.new(157, 159, 158, 255), img)
    