App.KL.Game.Effect.heroes.ground_slam(
  dmg: I32
  area: I32
): App.KL.Game.Effect<Unit>

  App.KL.Game.Effect { 
    get self = App.KL.Game.Effect.coord.get_center  
    let area = Hexagonal.Axial.neighbour(self)
    App.KL.Game.Effect.hp.damage_at(dmg, self)
    App.KL.Game.Effect.area!(App.KL.Game.Effect.hp.heal_at(dmg*2), area)
    return unit
  }

