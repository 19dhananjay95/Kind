App.Kaelin.Effect.hp.even(
  value: I32
): App.Kaelin.Effect<I32>

  App.Kaelin.Effect {
    get target = App.Kaelin.Effect.coord.get_target
    let sum = target@i + target@j
    let is_even = I32.eql(I32.mod(sum, 2), 0)
    if is_even then 
      App.Kaelin.Effect.hp.change(value)
    else 
      App.Kaelin.Effect.hp.change(I32.neg(value))
  }
