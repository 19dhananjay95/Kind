App.Kaelin.Event.Buffer.hex(A : Type, f : String -> A) : App.Kaelin.Event.Buffer<A>
  (ls)
    case ls {
      nil : Parser.fail!("The buffer is empty")
      cons : Parser {
           get str = Parser.ignore(U8.to_nat(ls.head))
           App.Kaelin.Event.Buffer.monad.pure!(f(str), ls.tail)
      }
    }
  
  
