StringChain.Node.on_message(node: StringChain.Node, received: StringChain.Received): IO<StringChain.Node>
  use node = node@peer <- (node@peer{StringChain.Peer.show(peer)} <- peer)
  open node.store
  open received
  case received.message {
    ping: IO {
      //StringChain.Node.send(node, received.sender, StringChain.Message.pong)
      return node
    }
    request_post: case node.store.post{U256.show(received.message.hash)} as got {
      none: IO {
        return node
      }
      some: IO {
        StringChain.Node.send(node, received.sender, StringChain.Message.share_post(got.value))
        return node
      }
    }
    share_post: IO {
      return StringChain.Node.add_post(node, received.message.post)
    }
  } default IO {
    return node
  }

StringChain.Node.add_post(node: StringChain.Node, post: StringChain.Post): StringChain.Node
  open node
  node@store <- StringChain.Store.add_post(post, node.store)

StringChain.Node.handle_inbox(node: StringChain.Node, inbox: List<IO.recv_udp.Message>): IO<StringChain.Node>
  case inbox {
    nil: IO {
      return node
    }
    cons: IO {
      open inbox.head
      get time = IO.get_time
      use received = StringChain.Received.from_udp_message(time, inbox.head)
      case received {
        none: StringChain.Node.handle_inbox(node, inbox.tail)
        some: IO {
          use received = received.value
          get node = StringChain.Node.on_message(node, received)
          get node = StringChain.Node.handle_inbox(node, inbox.tail)
          IO.print(StringChain.Peer.show(received.sender) | " " | StringChain.Message.show(received.message))
          return node
        }
      }
    }
  }

StringChain.Node.ping(node: StringChain.Node): IO<Unit>
  IO {
    get peers = StringChain.Node.get_random_peers(node, 8)
    let message = StringChain.Message.ping(List.mapped!(peers)!((peer) peer@address))
    StringChain.Node.send_to_random_peers(node, 3, message)
  }

StringChain.Node.share_tip(node: StringChain.Node): IO<Unit>
  IO {
    open node
    open node.store
    let tip_post = node.store.post{U256.show(node.store.tip)} abort IO.pass
    let message = StringChain.Message.share_post(tip_post)
    StringChain.Node.send_to_random_peers(node, 3, message)
  }

StringChain.Node.request_pendings(node: StringChain.Node): IO<Unit>
  IO {
    open node
    open node.store
    let pendings = List.map!!(U256.read, Map.keys!(node.store.pending))
    for pending in pendings:
      let message = StringChain.Message.request_post(pending)
      StringChain.Node.send_to_random_peers(node, 3, message)
  }

StringChain.Node.mine(node: StringChain.Node): StringChain.Node
  IO {
    open node
    open node.store
    let body = Vector.create!(32, () 0)
    let post = StringChain.Post.new(body, 0, node.store.tip)
    let post = StringChain.Post.mine(post, 1024, 256)
    case post {
      none: node
      some: StringChain.Node.add_post(node, post.value)
    }
  }
